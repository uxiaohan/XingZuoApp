/* pages/about/about.wxss */
.content {
  position: relative;
  padding: 0;
}

.head {
  box-sizing: border-box;
  padding: 18rpx;
  position: absolute;
  left: 25rpx;
  top: 6vh;
  width: 700rpx;
  border-radius: 18rpx;
  background: #fff;
  text-align: center;
  z-index: 9;
  box-shadow: 0 2px 12px 0 rgb(0 0 0 / 10%);
  overflow: hidden;
}

.head .head-title {
  font-size: 36rpx;
  font-weight: bolder;
  color: #3f3f3f;
  padding: 8rpx 0 36rpx;
}

.head .head-con {
  display: grid;
  grid-template-columns: repeat(4, 1fr);
  grid-gap: 18rpx;
}

.head .head-con .head-item {
  z-index: 9999999999;
}

.head .head-con .head-item image {
  display: block;
  margin: auto;
  width: 68%;
  border: 1rpx solid #3f3f3f;
  border-radius: 50%;
}

.head .head-con .head-item text {
  display: block;
  padding-top: 12rpx;
  font-size: 28rpx;
}

.con {
  box-sizing: border-box;
  padding-top: 13vh;
  position: absolute;
  bottom: 0;
  width: 100%;
  background-color: #f4f4f6;
  height: calc(100vh - 14vh);
  border-top-left-radius: 88rpx;
  border-top-right-radius: 88rpx;
  z-index: 0;
}

.con .con-item {
  margin: 18rpx auto;
  box-sizing: border-box;
  width: 700rpx;
  border-radius: 18rpx;
  background: #fff;
  text-align: center;
  overflow: hidden;
}

.con .con-item .con-item-head {
  box-sizing: border-box;
  padding: 18rpx;
  height: 88rpx;
}

.con .con-item .con-item-title {
  font-size: 36rpx;
  font-weight: bolder;
  color: #3f3f3f;
}

.con .con-item .con-item-auther {
  box-sizing: border-box;
  padding: 28rpx;
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-gap: 88rpx;
}

.con .con-item .con-item-auther .auther-item {
  text-align: center;
}

.con .con-item .con-item-auther .auther-item image {
  display: block;
  margin: auto;
  width: 68%;
  border-radius: 50%;
}

.con .con-item .con-item-auther .auther-item text {
  display: block;
  padding-top: 12rpx;
  font-size: 28rpx;
}

.con-item .con-item-thank {
  box-sizing: border-box;
  padding: 28rpx;
  width: 100%;
}

.con-item .con-item-thank .thank-head {
  display: flex;
  justify-content: space-between;
  font-size: 26rpx;
  text-align: left;
  color: #373737;
}

.con-item .con-item-thank .thank-head .strong {
  font-weight: bolder;
}

.con-item .con-item-thank .thank-head .thank-head-text {
  padding-left: 18rpx;
  flex: 1;
}

.con-item .con-item-thank .thank-head image {
  width: 30%;
}

.con-item .con-item-thank .thank-item-auther {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  grid-gap: 88rpx;
  margin-bottom: 58rpx;
}

.con-item .con-item-thank .thank-item-auther .thank-item {
  padding-top: 8rpx;
}

.con-item .con-item-thank .thank-item-auther .thank-item image {
  display: block;
  margin: auto;
  width: 68%;
  border-radius: 50%;
}

.con-item .con-item-thank .thank-item-auther .thank-item text {
  display: block;
  padding-top: 12rpx;
  font-size: 28rpx;
}